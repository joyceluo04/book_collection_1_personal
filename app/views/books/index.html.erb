<p style="color: green"><%= notice %></p>

<% content_for :title, "Books" %>

<h1>Books</h1>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show", book %> 
      <%= link_to "Edit", edit_book_path(book) %> 
      <%= link_to "Delete",book,
      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this book?" },
      class: "text-danger" %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>
