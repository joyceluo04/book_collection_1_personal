<p style="color: green"><%= notice %></p>

<% content_for :title, "User books" %>

<h1>User books</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Book Title</th>
    </tr>
  </thead>

  <tbody>
    <% @user_books.each do |user_book| %>
      <tr>
        <td><%= user_book.user.username %></td>
        <td><%= user_book.book.title %></td>
        <td>
          <%= link_to "Show", user_book %> 
          <%= link_to "Edit", edit_user_book_path(user_book) %> 
          <%= link_to "Delete", user_book,
                method: :delete,
                data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New user book", new_user_book_path %> |
<%= link_to "Book index", books_path %> |
<%= link_to "User index", users_path %>
